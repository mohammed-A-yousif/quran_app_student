<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/review_cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:background="#ffffff"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#9771FE"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:text="اختر تاريخ المراجعة"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:id="@+id/year_textView"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp" />


            </LinearLayout>

            <CalendarView
                android:id="@+id/calenderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/calenderView"
                android:outlineAmbientShadowColor="@color/background"/>

            <Button
                android:id="@+id/add_review_textButton"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="اضافة مراجعة"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="@drawable/round_corner"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>